@page
@model SecureBootDashboard.Web.Pages.ClientVersionsModel
@{
    ViewData["Title"] = "Client Versions";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-download"></i> Client Version Status</h2>
            <p class="text-muted">
                Track SecureBootWatcher client versions across your device fleet.
                Latest version: <strong>@Model.LatestVersion</strong> | 
                Minimum supported: <strong>@Model.MinimumVersion</strong>
            </p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Total Devices</h6>
                    <h2 class="card-title">@Model.TotalDevices</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Up-to-Date</h6>
                    <h2 class="card-title text-success">
                        @Model.UpToDateDevices
                        @if (Model.TotalDevices > 0)
                        {
                            <small class="text-muted">(@(Math.Round((double)Model.UpToDateDevices / Model.TotalDevices * 100, 1))%)</small>
                        }
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Outdated</h6>
                    <h2 class="card-title text-warning">
                        @Model.OutdatedDevices
                        @if (Model.TotalDevices > 0)
                        {
                            <small class="text-muted">(@(Math.Round((double)Model.OutdatedDevices / Model.TotalDevices * 100, 1))%)</small>
                        }
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Unsupported</h6>
                    <h2 class="card-title text-danger">
                        @Model.UnsupportedDevices
                        @if (Model.TotalDevices > 0)
                        {
                            <small class="text-muted">(@(Math.Round((double)Model.UnsupportedDevices / Model.TotalDevices * 100, 1))%)</small>
                        }
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Version Groups -->
    @if (Model.VersionGroups.Any())
    {
        foreach (var versionGroup in Model.VersionGroups)
        {
            var statusBadge = versionGroup.IsUnsupported ? "danger" : 
                              versionGroup.IsOutdated ? "warning" : 
                              versionGroup.IsLatest ? "success" : "secondary";
            
            var statusIcon = versionGroup.IsUnsupported ? "bi-x-circle-fill" : 
                             versionGroup.IsOutdated ? "bi-exclamation-triangle-fill" : 
                             versionGroup.IsLatest ? "bi-check-circle-fill" : "bi-question-circle-fill";
            
            var statusText = versionGroup.IsUnsupported ? "Unsupported" : 
                             versionGroup.IsOutdated ? "Outdated" : 
                             versionGroup.IsLatest ? "Up-to-Date" : "Unknown";

            <div class="card mb-3 border-@statusBadge">
                <div class="card-header bg-@statusBadge bg-opacity-10">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">
                                <i class="bi @statusIcon text-@statusBadge"></i>
                                Version: <strong>@versionGroup.Version</strong>
                                <span class="badge bg-@statusBadge">@statusText</span>
                            </h5>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <span class="badge bg-secondary">@versionGroup.DeviceCount device(s)</span>
                            @if (versionGroup.OldestReportDate.HasValue && versionGroup.NewestReportDate.HasValue)
                            {
                                <span class="text-muted small ms-2">
                                    Last seen: @versionGroup.NewestReportDate.Value.ToString("yyyy-MM-dd HH:mm")
                                </span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Machine Name</th>
                                    <th>Domain</th>
                                    <th>Manufacturer</th>
                                    <th>Model</th>
                                    <th>Fleet</th>
                                    <th>Last Seen</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var device in versionGroup.Devices)
                                {
                                    var rowClass = device.DaysSinceLastSeen > 7 ? "table-warning" : 
                                                   device.DaysSinceLastSeen > 30 ? "table-danger" : "";
                                    
                                    <tr class="@rowClass">
                                        <td>
                                            <strong>@device.MachineName</strong>
                                            @if (device.DaysSinceLastSeen > 7)
                                            {
                                                <i class="bi bi-exclamation-triangle text-warning" title="Not seen recently"></i>
                                            }
                                        </td>
                                        <td>@(device.DomainName ?? "-")</td>
                                        <td>@(device.Manufacturer ?? "-")</td>
                                        <td>@(device.Model ?? "-")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(device.FleetId))
                                            {
                                                <span class="badge bg-info">@device.FleetId</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span title="@device.LastSeenUtc.ToString("yyyy-MM-dd HH:mm:ss") UTC">
                                                @device.DaysSinceLastSeen day(s) ago
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <a href="/Devices/@device.DeviceId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No devices found in the database. Deploy the SecureBootWatcher client to start tracking versions.
        </div>
    }

    <!-- Legend -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Legend</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Version Status</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle-fill text-success"></i> <strong>Up-to-Date:</strong> Running the latest version</li>
                        <li><i class="bi bi-exclamation-triangle-fill text-warning"></i> <strong>Outdated:</strong> Newer version available but still supported</li>
                        <li><i class="bi bi-x-circle-fill text-danger"></i> <strong>Unsupported:</strong> Below minimum supported version</li>
                        <li><i class="bi bi-question-circle-fill text-secondary"></i> <strong>Unknown:</strong> Version information not available</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6>Device Activity</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-exclamation-triangle text-warning"></i> Not seen in 7+ days (yellow row)</li>
                        <li><i class="bi bi-exclamation-triangle text-danger"></i> Not seen in 30+ days (red row)</li>
                    </ul>
                    <h6 class="mt-3">Actions</h6>
                    <p class="text-muted small mb-0">
                        To update clients, deploy new version via Intune, GPO, or SCCM.
                        See <a href="/docs/CLIENT_VERSION_TRACKING.md" target="_blank">documentation</a> for details.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
    </script>
}
