@page
@model SecureBootDashboard.Web.Pages.Commands.HistoryModel
@{
    ViewData["Title"] = "Command History";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">
            <i class="fas fa-history text-primary"></i> Command History
        </h1>
        <a asp-page="/Commands/Send" class="btn btn-primary">
            <i class="fas fa-plus"></i> Send New Command
        </a>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title text-muted">Total</h6>
                    <p class="display-6">@Model.Statistics.TotalCommands</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <a asp-page="/Commands/History" asp-route-status="Pending" class="text-decoration-none">
                <div class="card text-center bg-warning text-dark">
                    <div class="card-body">
                        <h6 class="card-title">Pending</h6>
                        <p class="display-6">@Model.Statistics.PendingCount</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-2">
            <a asp-page="/Commands/History" asp-route-status="Completed" class="text-decoration-none">
                <div class="card text-center bg-success text-white">
                    <div class="card-body">
                        <h6 class="card-title">Completed</h6>
                        <p class="display-6">@Model.Statistics.CompletedCount</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-2">
            <a asp-page="/Commands/History" asp-route-status="Failed" class="text-decoration-none">
                <div class="card text-center bg-danger text-white">
                    <div class="card-body">
                        <h6 class="card-title">Failed</h6>
                        <p class="display-6">@Model.Statistics.FailedCount</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-2">
            <a asp-page="/Commands/History" asp-route-status="Cancelled" class="text-decoration-none">
                <div class="card text-center bg-secondary text-white">
                    <div class="card-body">
                        <h6 class="card-title">Cancelled</h6>
                        <p class="display-6">@Model.Statistics.CancelledCount</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-2">
            @if (!string.IsNullOrEmpty(Model.Status))
            {
                <a asp-page="/Commands/History" class="btn btn-outline-secondary w-100 h-100 d-flex align-items-center justify-content-center">
                    <i class="fas fa-times"></i> Clear Filter
                </a>
            }
        </div>
    </div>

    <!-- Commands Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Command List
                @if (!string.IsNullOrEmpty(Model.Status))
                {
                    <span class="badge bg-light text-dark ms-2">Filter: @Model.Status</span>
                }
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Commands.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Status</th>
                                <th>Command Type</th>
                                <th>Device</th>
                                <th>Description</th>
                                <th>Created</th>
                                <th>Created By</th>
                                <th>Priority</th>
                                <th>Fetches</th>
                                <th>Processed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cmd in Model.Commands)
                            {
                                <tr>
                                    <td>
                                        <span class="badge @cmd.StatusBadgeClass">
                                            <i class="fas @cmd.StatusIcon"></i> @cmd.Status
                                        </span>
                                    </td>
                                    <td>
                                        <code>@cmd.CommandType</code>
                                    </td>
                                    <td>
                                        <a asp-page="/Devices/Details" asp-route-id="@cmd.DeviceId" class="text-decoration-none">
                                            @cmd.DeviceId.ToString().Substring(0, 8)...
                                        </a>
                                    </td>
                                    <td>@(cmd.Description ?? "-")</td>
                                    <td>
                                        <small>@cmd.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                                    </td>
                                    <td>@(cmd.CreatedBy ?? "System")</td>
                                    <td>
                                        @if (cmd.Priority > 0)
                                        {
                                            <span class="badge bg-info">@cmd.Priority</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td>
                                        @if (cmd.FetchCount > 0)
                                        {
                                            <span class="badge bg-secondary">@cmd.FetchCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td>
                                        @if (cmd.ProcessedAtUtc.HasValue)
                                        {
                                            <small>@cmd.ProcessedAtUtc.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (cmd.Status == "Pending" || cmd.Status == "Fetched")
                                        {
                                            <form method="post" asp-page-handler="Cancel" asp-route-commandId="@cmd.CommandId" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Cancel this command?')">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                        <a asp-page="/Commands/Details" asp-route-id="@cmd.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No commands found</p>
                    <a asp-page="/Commands/Send" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Send First Command
                    </a>
                </div>
            }
        </div>
    </div>
</div>
