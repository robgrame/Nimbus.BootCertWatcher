@page
@model DetailsModel
@{
    ViewData["Title"] = Model.Device != null ? $"Device: {Model.Device.MachineName}" : "Device Details";
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index"><i class="fas fa-home"></i> Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Device Details</li>
        </ol>
    </nav>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
        </div>
        <a asp-page="/Index" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
    }
    else if (Model.Device != null)
    {
        var timeSinceFirstSeen = DateTimeOffset.UtcNow - Model.Device.FirstSeenUtc;
        var timeSinceLastSeen = DateTimeOffset.UtcNow - Model.Device.LastSeenUtc;

        <div class="row mb-4">
            <div class="col">
                <h1 class="display-5">
                    <i class="fas fa-desktop text-primary"></i> @Model.Device.MachineName
                </h1>
                @if (!string.IsNullOrEmpty(Model.Device.DomainName))
                {
                    <p class="text-muted"><i class="fas fa-network-wired"></i> @Model.Device.DomainName</p>
                }
            </div>
            <div class="col-auto">
                <a asp-page="/Devices/Reports" asp-route-id="@Model.Device.Id" class="btn btn-primary">
                    <i class="fas fa-history"></i> View Report History
                </a>
                <a asp-page="/Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Device Information Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Device Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <th style="width: 200px;"><i class="fas fa-desktop"></i> Machine Name:</th>
                                <td><strong>@Model.Device.MachineName</strong></td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-network-wired"></i> Domain:</th>
                                <td>@(Model.Device.DomainName ?? "-")</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-user"></i> User Principal Name:</th>
                                <td>@(Model.Device.UserPrincipalName ?? "-")</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-layer-group"></i> Fleet ID:</th>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.Device.FleetId))
                                    {
                                        <span class="badge bg-info"><i class="fas fa-tag"></i> @Model.Device.FleetId</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <th style="width: 200px;"><i class="fas fa-industry"></i> Manufacturer:</th>
                                <td>@(Model.Device.Manufacturer ?? "Unknown")</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-laptop"></i> Model:</th>
                                <td>@(Model.Device.Model ?? "Unknown")</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-microchip"></i> Firmware Version:</th>
                                <td><code>@(Model.Device.FirmwareVersion ?? "Unknown")</code></td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-shield-alt"></i> Secure Boot:</th>
                                <td>
                                    @if (Model.Device.UEFISecureBootEnabled.HasValue)
                                    {
                                        if (Model.Device.UEFISecureBootEnabled.Value)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Enabled
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle"></i> Disabled
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-question-circle"></i> Unknown
                                        </span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-fingerprint"></i> Device ID:</th>
                                <td><small class="text-muted"><code>@Model.Device.Id</code></small></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Timeline Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-clock"></i> Timeline</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3">
                                <i class="fas fa-calendar-plus fa-3x text-success"></i>
                            </div>
                            <div>
                                <h6 class="mb-0"><i class="fas fa-calendar-alt"></i> First Seen</h6>
                                <p class="mb-0 text-muted">
                                    @Model.Device.FirstSeenUtc.ToString("yyyy-MM-dd HH:mm:ss") UTC
                                </p>
                                <small class="text-muted">
                                    @((int)timeSinceFirstSeen.TotalDays) days ago
                                </small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3">
                                <i class="fas fa-calendar-check fa-3x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-0"><i class="fas fa-calendar-alt"></i> Last Seen</h6>
                                <p class="mb-0 text-muted">
                                    @Model.Device.LastSeenUtc.ToString("yyyy-MM-dd HH:mm:ss") UTC
                                </p>
                                <small class="text-muted">
                                    @if (timeSinceLastSeen.TotalMinutes < 60)
                                    {
                                        <text>@((int)timeSinceLastSeen.TotalMinutes) minutes ago</text>
                                    }
                                    else if (timeSinceLastSeen.TotalHours < 24)
                                    {
                                        <text>@((int)timeSinceLastSeen.TotalHours) hours ago</text>
                                    }
                                    else
                                    {
                                        <text>@((int)timeSinceLastSeen.TotalDays) days ago</text>
                                    }
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        var registryState = Model.GetLatestRegistryState();
        var certificates = Model.GetLatestCertificates();

        @if (registryState != null)
        {
            <!-- Registry Update Progression Card -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-tasks"></i> Secure Boot Update Progression</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6><i class="fas fa-chart-pie"></i> Deployment Status</h6>
                            <div class="progress mb-2" style="height: 30px;">
                                <div class="progress-bar @(registryState.CompletionPercentage == 100 ? "bg-success" : "bg-warning")" 
                                     role="progressbar" 
                                     style="width: @registryState.CompletionPercentage%;" 
                                     aria-valuenow="@registryState.CompletionPercentage" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                    @registryState.CompletionPercentage%
                                </div>
                            </div>
                            <p class="mb-0"><strong>State:</strong> @registryState.ProgressionState</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-info-circle"></i> Registry Details</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-6">Available Updates:</dt>
                                <dd class="col-sm-6"><code>@(registryState.AvailableUpdates?.ToString() ?? "N/A")</code></dd>
                                
                                <dt class="col-sm-6">Deployment State:</dt>
                                <dd class="col-sm-6">
                                    @switch (registryState.UefiCa2023Status.ToString())
                                    {
                                        case "Deployed":
                                            <span class="badge bg-success">Deployed</span>
                                            break;
                                        case "Updated":
                                            <span class="badge bg-success">Updated</span>
                                            break;
                                        case "Pending":
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case "Error":
                                            <span class="badge bg-danger">Error</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@registryState.UefiCa2023Status</span>
                                            break;
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (registryState.UpdateSteps.Any())
                    {
                        <h6 class="mt-3"><i class="fas fa-list-ol"></i> Update Steps</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Step</th>
                                        <th>Status</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var step in registryState.UpdateSteps)
                                    {
                                        <tr>
                                            <td>@step.Name</td>
                                            <td>
                                                @if (step.IsCompleted)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary"><i class="fas fa-clock"></i> Pending</span>
                                                }
                                            </td>
                                            <td>@step.Description</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (registryState.PendingUpdates.Any())
                    {
                        <div class="alert alert-info mt-3">
                            <h6><i class="fas fa-clock"></i> Pending Updates</h6>
                            <ul class="mb-0">
                                @foreach (var update in registryState.PendingUpdates)
                                {
                                    <li>@update</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        }

        @if (certificates != null)
        {
            <!-- Certificates Card -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-certificate"></i> Certificati Secure Boot</h5>
                </div>
                <div class="card-body">
                    <!-- Summary Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="text-primary mb-0">@certificates.TotalCertificateCount</h3>
                                    <small class="text-muted">Totale Certificati</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="text-danger mb-0">@certificates.ExpiredCertificateCount</h3>
                                    <small class="text-muted">Scaduti</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="text-warning mb-0">@certificates.ExpiringCertificateCount</h3>
                                    <small class="text-muted">In Scadenza (90gg)</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="@(certificates.SecureBootEnabled == true ? "text-success" : "text-danger") mb-0">
                                        <i class="fas fa-shield-alt"></i>
                                    </h3>
                                    <small class="text-muted">
                                        @(certificates.SecureBootEnabled == true ? "Abilitato" : 
                                          certificates.SecureBootEnabled == false ? "Disabilitato" : "Sconosciuto")
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Helper method to render certificate table *@
                    @{
                        void RenderCertificateTable(IList<SecureBootWatcher.Shared.Models.SecureBootCertificate> certs, string accordionId)
                        {
                            if (certs?.Any() == true)
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width: 30px;">#</th>
                                                <th>Nome Certificato (Subject)</th>
                                                <th>Emesso Da (Issuer)</th>
                                                <th>Inizio Validità</th>
                                                <th>Fine Validità</th>
                                                <th>Giorni Rimanenti</th>
                                                <th>Stato</th>
                                                <th>Dettagli</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < certs.Count; i++)
                                            {
                                                var cert = certs[i];
                                                var isExpired = cert.NotAfter.HasValue && cert.NotAfter.Value < DateTimeOffset.UtcNow;
                                                var isExpiringSoon = !isExpired && cert.NotAfter.HasValue && cert.NotAfter.Value < DateTimeOffset.UtcNow.AddDays(90);
                                                var daysRemaining = cert.DaysUntilExpiration ?? 0;
                                                
                                                <tr class="@(isExpired ? "table-danger" : isExpiringSoon ? "table-warning" : "")">
                                                    <td>@(i + 1)</td>
                                                    <td>
                                                        <div>
                                                            <strong>@(cert.Subject ?? "N/A")</strong>
                                                            @if (cert.IsMicrosoftCertificate)
                                                            {
                                                                <span class="badge bg-primary ms-1">
                                                                    <i class="fab fa-microsoft"></i> Microsoft
                                                                </span>
                                                            }
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(cert.SerialNumber))
                                                        {
                                                            <small class="text-muted">S/N: @cert.SerialNumber</small>
                                                        }
                                                    </td>
                                                    <td><small>@(cert.Issuer ?? "N/A")</small></td>
                                                    <td>
                                                        @if (cert.NotBefore.HasValue)
                                                        {
                                                            <text>@cert.NotBefore.Value.ToString("dd/MM/yyyy")</text>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">N/A</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (cert.NotAfter.HasValue)
                                                        {
                                                            <text>@cert.NotAfter.Value.ToString("dd/MM/yyyy")</text>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">N/A</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (daysRemaining > 0)
                                                        {
                                                            <span class="text-success">+@daysRemaining giorni</span>
                                                        }
                                                        else if (daysRemaining < 0)
                                                        {
                                                            <span class="text-danger">@daysRemaining giorni</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (isExpired)
                                                        {
                                                            <span class="badge bg-danger">
                                                                <i class="fas fa-times-circle"></i> Scaduto
                                                            </span>
                                                        }
                                                        else if (isExpiringSoon)
                                                        {
                                                            <span class="badge bg-warning text-dark">
                                                                <i class="fas fa-exclamation-triangle"></i> In Scadenza
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check-circle"></i> Valido
                                                            </span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-info" type="button" 
                                                                data-bs-toggle="collapse" 
                                                                data-bs-target="#cert-@accordionId-@i" 
                                                                aria-expanded="false">
                                                            <i class="fas fa-info-circle"></i> Info
                                                        </button>
                                                    </td>
                                                </tr>
                                                <tr class="collapse" id="cert-@accordionId-@i">
                                                    <td colspan="8" class="bg-light">
                                                        <div class="p-3">
                                                            <h6><i class="fas fa-file-certificate"></i> Dettagli Certificato</h6>
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <dl class="row mb-0">
                                                                        <dt class="col-sm-5">Thumbprint:</dt>
                                                                        <dd class="col-sm-7"><code class="small">@(cert.Thumbprint ?? "N/A")</code></dd>
                                                                        
                                                                        <dt class="col-sm-5">Versione:</dt>
                                                                        <dd class="col-sm-7">@(cert.Version?.ToString() ?? "N/A")</dd>
                                                                        
                                                                        <dt class="col-sm-5">Database UEFI:</dt>
                                                                        <dd class="col-sm-7"><span class="badge bg-secondary">@cert.Database</span></dd>
                                                                    </dl>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <dl class="row mb-0">
                                                                        <dt class="col-sm-6">Algoritmo Firma:</dt>
                                                                        <dd class="col-sm-6">@(cert.SignatureAlgorithm ?? "N/A")</dd>
                                                                        
                                                                        <dt class="col-sm-6">Algoritmo Chiave:</dt>
                                                                        <dd class="col-sm-6">@(cert.PublicKeyAlgorithm ?? "N/A")</dd>
                                                                        
                                                                        <dt class="col-sm-6">Dimensione Chiave:</dt>
                                                                        <dd class="col-sm-6">@(cert.KeySize?.ToString() ?? "N/A") bit</dd>
                                                                    </dl>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle"></i> Nessun certificato presente
                                </div>
                            }
                        }
                    }

                    <!-- Signature Database (db) -->
                    @if (certificates.SignatureDatabase?.Any() == true)
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">
                                    <i class="fas fa-database text-success"></i> 
                                    Signature Database (db) - @certificates.SignatureDatabase.Count certificati
                                </h6>
                                <button class="btn btn-sm btn-outline-secondary" type="button" 
                                        data-bs-toggle="collapse" 
                                        data-bs-target="#db-collapse" 
                                        aria-expanded="true">
                                    <i class="fas fa-chevron-down"></i> Mostra/Nascondi
                                </button>
                            </div>
                            <div class="collapse show" id="db-collapse">
                                @{ RenderCertificateTable(certificates.SignatureDatabase, "db"); }
                            </div>
                        </div>
                    }

                    <!-- Forbidden Database (dbx) -->
                    @if (certificates.ForbiddenDatabase?.Any() == true)
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">
                                    <i class="fas fa-ban text-danger"></i> 
                                    Forbidden Signature Database (dbx) - @certificates.ForbiddenDatabase.Count certificati
                                </h6>
                                <button class="btn btn-sm btn-outline-secondary" type="button" 
                                        data-bs-toggle="collapse" 
                                        data-bs-target="#dbx-collapse" 
                                        aria-expanded="false">
                                    <i class="fas fa-chevron-down"></i> Mostra/Nascondi
                                </button>
                            </div>
                            <div class="collapse" id="dbx-collapse">
                                @{ RenderCertificateTable(certificates.ForbiddenDatabase, "dbx"); }
                            </div>
                        </div>
                    }

                    <!-- Key Exchange Keys (KEK) -->
                    @if (certificates.KeyExchangeKeys?.Any() == true)
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">
                                    <i class="fas fa-key text-warning"></i> 
                                    Key Exchange Keys (KEK) - @certificates.KeyExchangeKeys.Count certificati
                                </h6>
                                <button class="btn btn-sm btn-outline-secondary" type="button" 
                                        data-bs-toggle="collapse" 
                                        data-bs-target="#kek-collapse" 
                                        aria-expanded="false">
                                    <i class="fas fa-chevron-down"></i> Mostra/Nascondi
                                </button>
                            </div>
                            <div class="collapse" id="kek-collapse">
                                @{ RenderCertificateTable(certificates.KeyExchangeKeys, "kek"); }
                            </div>
                        </div>
                    }

                    <!-- Platform Keys (PK) -->
                    @if (certificates.PlatformKeys?.Any() == true)
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">
                                    <i class="fas fa-lock text-primary"></i> 
                                    Platform Key (PK) - @certificates.PlatformKeys.Count certificato
                                </h6>
                                <button class="btn btn-sm btn-outline-secondary" type="button" 
                                        data-bs-toggle="collapse" 
                                        data-bs-target="#pk-collapse" 
                                        aria-expanded="false">
                                    <i class="fas fa-chevron-down"></i> Mostra/Nascondi
                                </button>
                            </div>
                            <div class="collapse" id="pk-collapse">
                                @{ RenderCertificateTable(certificates.PlatformKeys, "pk"); }
                            </div>
                        </div>
                    }

                    @if (certificates.TotalCertificateCount == 0)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> 
                            Nessun certificato Secure Boot trovato su questo dispositivo.
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Recent Reports Card -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Recent Reports (Last 10)</h5>
            </div>
            <div class="card-body">
                @if (Model.Device.RecentReports.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-calendar"></i> Date/Time (UTC)</th>
                                    <th><i class="fas fa-traffic-light"></i> Deployment State</th>
                                    <th><i class="fas fa-code-branch"></i> Client Version</th>
                                    <th><i class="fas fa-cog"></i> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var report in Model.Device.RecentReports)
                                {
                                    <tr>
                                        <td>@report.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>
                                            @switch (report.DeploymentState)
                                            {
                                                case "Deployed":
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Deployed</span>
                                                    break;
                                                case "Updated":
                                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> Updated</span>
                                                    break;
                                                case "Pending":
                                                    <span class="badge bg-warning text-dark"><i class="fas fa-clock"></i> Pending</span>
                                                    break;
                                                case "Error":
                                                    <span class="badge bg-danger"><i class="fas fa-times"></i> Error</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@(report.DeploymentState ?? "Unknown")</span>
                                                    break;
                                            }
                                        </td>
                                        <td><code>@(report.ClientVersion ?? "-")</code></td>
                                        <td>
                                            <a asp-page="/Reports/Details" asp-route-id="@report.ReportId" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> View Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="text-center mt-3">
                        <a asp-page="/Devices/Reports" asp-route-id="@Model.Device.Id" class="btn btn-outline-primary">
                            <i class="fas fa-history"></i> View All Reports
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-info-circle"></i> No reports available for this device.
                    </div>
                }
            </div>
        </div>
    }
</div>

