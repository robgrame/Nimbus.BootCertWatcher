@page
@model IndexModel
@{
    ViewData["Title"] = "Secure Boot Dashboard";
}

<!-- Hero Banner - Hidden on mobile (< 768px) -->
<div class="hero-banner mb-4 d-none d-md-block">
    <img src="~/images/banner.webp" 
         alt="Secure Boot Dashboard Banner" 
         class="img-fluid w-100 rounded shadow-sm"
         loading="eager">
</div>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <!-- Title - Only visible on mobile (< 768px) -->
            <h1 class="display-4 d-md-none">
                <i class="fas fa-shield-alt text-primary"></i> Secure Boot Dashboard
            </h1>
            <p class="lead text-muted d-none d-md-block">Monitoraggio certificati Secure Boot su dispositivi Windows</p>
        </div>
        <div class="col-auto">
            @if (Model.ApiHealthy)
            {
                <span class="badge bg-success fs-6">
                    <i class="fas fa-check-circle"></i> API Online
                </span>
            }
            else
            {
                <span class="badge bg-danger fs-6">
                    <i class="fas fa-times-circle"></i> API Offline
                </span>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Devices.Any())
    {
        <!-- Statistics Cards (Clickable) -->
        <div class="row mb-4">
            <div class="col-md-2">
                <a asp-page="/Devices/List" class="card-link">
                    <div class="card text-center bg-primary text-white stat-card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-desktop"></i> Totale Dispositivi</h5>
                            <p class="display-4">@Model.TotalDevices</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <small><i class="fas fa-arrow-right"></i> Vedi tutti</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-2">
                <a asp-page="/Devices/List" class="card-link">
                    <div class="card text-center bg-info text-white stat-card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-heartbeat"></i> Attivi (24h)</h5>
                            <p class="display-4">@Model.ActiveDevices</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <small><i class="fas fa-arrow-right"></i> Vedi attivi</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-2">
                <a asp-page="/Devices/List" class="card-link">
                    <div class="card text-center bg-secondary text-white stat-card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-moon"></i> Inattivi (>7d)</h5>
                            <p class="display-4">@Model.InactiveDevices</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <small><i class="fas fa-arrow-right"></i> Vedi inattivi</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-2">
                <a asp-page="/Devices/List" asp-route-state="Deployed" class="card-link">
                    <div class="card text-center bg-success text-white stat-card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-check"></i> Deployed</h5>
                            <p class="display-4">@Model.DeployedDevices</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <small><i class="fas fa-arrow-right"></i> Vedi deployed</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-2">
                <a asp-page="/Devices/List" asp-route-state="Pending" class="card-link">
                    <div class="card text-center bg-warning text-dark stat-card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-clock"></i> Pending</h5>
                            <p class="display-4">@Model.PendingDevices</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <small><i class="fas fa-arrow-right"></i> Vedi pending</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-2">
                <a asp-page="/Devices/List" asp-route-state="Error" class="card-link">
                    <div class="card text-center bg-danger text-white stat-card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-times"></i> Error</h5>
                            <p class="display-4">@Model.ErrorDevices</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <small><i class="fas fa-arrow-right"></i> Vedi errori</small>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="row mb-4">
            <!-- Compliance Pie Chart -->
            <div class="col-lg-3 col-md-6 mb-4">
                <a asp-page="/Devices/List" class="card-link">
                    <div class="card h-100 shadow-sm chart-card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-pie"></i> Compliance Status
                            </h5>
                        </div>
                        <div class="card-body">
                            <canvas id="complianceChart"></canvas>
                            <div class="text-center mt-3">
                                <h4 class="text-primary">@Model.CompliancePercentage.ToString("F1")%</h4>
                                <p class="text-muted mb-0">Dispositivi Compliant</p>
                            </div>
                        </div>
                        <div class="card-footer bg-light text-center">
                            <small class="text-muted">
                                <i class="fas fa-arrow-right"></i> Clicca per dettagli
                            </small>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Secure Boot Status Pie Chart (NEW) -->
            <div class="col-lg-3 col-md-6 mb-4">
                <a asp-page="/Devices/List" class="card-link">
                    <div class="card h-100 shadow-sm chart-card">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-shield-alt"></i> Secure Boot Status
                            </h5>
                        </div>
                        <div class="card-body">
                            <canvas id="secureBootChart"></canvas>
                            <div class="text-center mt-3">
                                <h4 class="text-success">@Model.SecureBootEnabledPercentage.ToString("F1")%</h4>
                                <p class="text-muted mb-0">Secure Boot Abilitato</p>
                            </div>
                        </div>
                        <div class="card-footer bg-light text-center">
                            <small class="text-muted">
                                <i class="fas fa-arrow-right"></i> Clicca per dettagli
                            </small>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Deployment State Pie Chart -->
            <div class="col-lg-3 col-md-6 mb-4">
                <a asp-page="/Devices/List" class="card-link">
                    <div class="card h-100 shadow-sm chart-card">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-pie"></i> Deployment States
                            </h5>
                        </div>
                        <div class="card-body">
                            <canvas id="deploymentStateChart"></canvas>
                            <div class="text-center mt-3">
                                <p class="text-muted mb-0">Distribuzione Stati</p>
                            </div>
                        </div>
                        <div class="card-footer bg-light text-center">
                            <small class="text-muted">
                                <i class="fas fa-arrow-right"></i> Clicca per dettagli
                            </small>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Compliance Trend Line Chart -->
            <div class="col-lg-3 col-md-12 mb-4">
                <a asp-page="/Devices/List" class="card-link">
                    <div class="card h-100 shadow-sm chart-card">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-line"></i> Compliance Trend (7 giorni)
                            </h5>
                        </div>
                        <div class="card-body">
                            <canvas id="complianceTrendChart"></canvas>
                            <div class="text-center mt-3">
                                <p class="text-muted mb-0">Crescita Dispositivi Compliant</p>
                            </div>
                        </div>
                        <div class="card-footer bg-light text-center">
                            <small class="text-muted">
                                <i class="fas fa-arrow-right"></i> Clicca per dettagli
                            </small>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">
                            <i class="fas fa-rocket"></i> Azioni Rapide
                        </h5>
                        <div class="d-flex justify-content-center gap-3 mt-3">
                            <a asp-page="/Devices/List" class="btn btn-primary btn-lg">
                                <i class="fas fa-list"></i> Vedi Tutti i Dispositivi
                            </a>
                            <a asp-page="/Devices/List" asp-route-state="Error" class="btn btn-danger btn-lg">
                                <i class="fas fa-exclamation-triangle"></i> Gestisci Errori
                            </a>
                            <a asp-page="/Devices/List" asp-route-state="Pending" class="btn btn-warning btn-lg">
                                <i class="fas fa-clock"></i> Monitora Pending
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.ApiHealthy)
    {
        <div class="alert alert-info">
            <h4 class="alert-heading"><i class="fas fa-info-circle"></i> Nessun Dispositivo Registrato</h4>
            <p>Non ci sono dispositivi da visualizzare. I client devono ancora inviare i dati all'API.</p>
            <hr>
            <p class="mb-0">
                <strong>Prossimi passi:</strong>
            </p>
            <ol class="mb-0">
                <li>Configura il client SecureBootWatcher sui dispositivi Windows</li>
                <li>Verifica che i client possano raggiungere l'API</li>
                <li>Attendi che i client inviino il primo report</li>
            </ol>
        </div>
    }
</div>

@section Styles {
    <style>
        /* Hero banner styling */
        .hero-banner {
            max-height: 400px;
            overflow: hidden;
        }
        
        .hero-banner img {
            object-fit: cover;
            width: 100%;
            height: auto;
            max-height: 400px;
        }
        
        /* Responsive hero banner */
        @@media (max-width: 768px) {
            .hero-banner {
                max-height: 250px;
            }
            .hero-banner img {
                max-height: 250px;
            }
        }
        
        @@media (max-width: 576px) {
            .hero-banner {
                max-height: 200px;
            }
            .hero-banner img {
                max-height: 200px;
            }
        }

        /* Clickable cards styling */
        .card-link {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .stat-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            cursor: pointer;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .stat-card .card-footer {
            opacity: 0;
            transition: opacity 0.2s ease-in-out;
        }

        .stat-card:hover .card-footer {
            opacity: 1;
        }

        /* Chart cards */
        .chart-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            cursor: pointer;
        }

        .chart-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .chart-card .card-footer {
            opacity: 0;
            transition: opacity 0.2s ease-in-out;
        }

        .chart-card:hover .card-footer {
            opacity: 1;
        }

        /* Chart containers */
        .card-body canvas {
            max-height: 250px;
        }

        /* Button gap utility (Bootstrap 5) */
        .gap-3 {
            gap: 1rem !important;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .d-flex.gap-3 {
                flex-direction: column;
            }
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        // Chart colors
        const chartColors = {
            compliant: 'rgba(40, 167, 69, 0.8)',
            nonCompliant: 'rgba(220, 53, 69, 0.8)',
            secureBootEnabled: 'rgba(40, 167, 69, 0.8)',
            secureBootDisabled: 'rgba(220, 53, 69, 0.8)',
            secureBootUnknown: 'rgba(108, 117, 125, 0.8)',
            deployed: 'rgba(40, 167, 69, 0.8)',
            pending: 'rgba(255, 193, 7, 0.8)',
            error: 'rgba(220, 53, 69, 0.8)',
            unknown: 'rgba(108, 117, 125, 0.8)',
            trend: 'rgba(23, 162, 184, 0.8)'
        };

        // 1. Compliance Status Pie Chart
        const complianceCtx = document.getElementById('complianceChart');
        if (complianceCtx) {
            new Chart(complianceCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Compliant (Deployed)', 'Non-Compliant'],
                    datasets: [{
                        data: [@Model.CompliantDevices, @Model.NonCompliantDevices],
                        backgroundColor: [chartColors.compliant, chartColors.nonCompliant],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                font: {
                                    size: 12
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    const total = @Model.TotalDevices;
                                    const percentage = ((value / total) * 100).toFixed(1);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }

        // 2. Secure Boot Status Pie Chart (NEW)
        const secureBootCtx = document.getElementById('secureBootChart');
        if (secureBootCtx) {
            new Chart(secureBootCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Enabled', 'Disabled', 'Unknown'],
                    datasets: [{
                        data: [
                            @Model.SecureBootEnabledDevices,
                            @Model.SecureBootDisabledDevices,
                            @Model.SecureBootUnknownDevices
                        ],
                        backgroundColor: [
                            chartColors.secureBootEnabled,
                            chartColors.secureBootDisabled,
                            chartColors.secureBootUnknown
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                font: {
                                    size: 12
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    const total = @Model.TotalDevices;
                                    const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }

        // 3. Deployment States Pie Chart
        const deploymentStateCtx = document.getElementById('deploymentStateChart');
        if (deploymentStateCtx) {
            new Chart(deploymentStateCtx, {
                type: 'pie',
                data: {
                    labels: ['Deployed', 'Pending', 'Error', 'Unknown'],
                    datasets: [{
                        data: [
                            @Model.DeployedDevices,
                            @Model.PendingDevices,
                            @Model.ErrorDevices,
                            @(Model.TotalDevices - Model.DeployedDevices - Model.PendingDevices - Model.ErrorDevices)
                        ],
                        backgroundColor: [
                            chartColors.deployed,
                            chartColors.pending,
                            chartColors.error,
                            chartColors.unknown
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                font: {
                                    size: 12
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    const total = @Model.TotalDevices;
                                    const percentage = ((value / total) * 100).toFixed(1);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }

        // 4. Compliance Trend Line Chart
        const complianceTrendCtx = document.getElementById('complianceTrendChart');
        if (complianceTrendCtx) {
            const trendData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ComplianceTrendData));
            const labels = Object.keys(trendData).map(date => {
                const d = new Date(date);
                return d.toLocaleDateString('it-IT', { month: 'short', day: 'numeric' });
            });
            const data = Object.values(trendData);

            new Chart(complianceTrendCtx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Dispositivi Compliant',
                        data: data,
                        borderColor: chartColors.trend,
                        backgroundColor: 'rgba(23, 162, 184, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        pointBackgroundColor: chartColors.trend,
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            callbacks: {
                                title: function(context) {
                                    const date = Object.keys(trendData)[context[0].dataIndex];
                                    return new Date(date).toLocaleDateString('it-IT', { 
                                        weekday: 'short', 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric' 
                                    });
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }

        // === SignalR Real-time Updates ===
        if (window.dashboardClient) {
            // Subscribe to dashboard updates
            window.dashboardClient.subscribeToDashboard();

            // Handle new report received
            window.dashboardClient.onNewReportReceived = function(data) {
                console.log('[Dashboard] New report received from:', data.machineName);
                
                // Show toast notification (already handled by dashboard-realtime.js)
                // Optionally reload page to show updated statistics
                // Uncomment the following line if you want automatic page reload:
                // setTimeout(() => location.reload(), 2000);
            };

            // Handle compliance updates
            window.dashboardClient.onComplianceUpdated = function(data) {
                console.log('[Dashboard] Compliance updated:', data);
                
                // Update statistics cards with animation
                updateStatCards(data);
                
                // Update charts
                updateCharts(data);
            };

            // Handle device count updates
            window.dashboardClient.onDeviceCountUpdated = function(data) {
                console.log('[Dashboard] Device count updated:', data.totalDevices);
                
                // Update total devices card
                const totalDevicesCard = document.querySelector('.bg-primary .display-4');
                if (totalDevicesCard) {
                    animateValue(totalDevicesCard, parseInt(totalDevicesCard.textContent), data.totalDevices, 500);
                }
            };

            // Function to update stat cards with animation
            function updateStatCards(data) {
                const cards = {
                    total: document.querySelector('.bg-primary .display-4'),
                    active: document.querySelector('.bg-info .display-4'),
                    deployed: document.querySelector('.bg-success .display-4'),
                    pending: document.querySelector('.bg-warning .display-4'),
                    error: document.querySelector('.bg-danger .display-4')
                };

                if (cards.total) animateValue(cards.total, parseInt(cards.total.textContent), data.totalDevices, 500);
                if (cards.active) animateValue(cards.active, parseInt(cards.active.textContent), data.activeDevices, 500);
                if (cards.deployed) animateValue(cards.deployed, parseInt(cards.deployed.textContent), data.compliantDevices, 500);
                if (cards.pending) animateValue(cards.pending, parseInt(cards.pending.textContent), data.pendingDevices, 500);
                if (cards.error) animateValue(cards.error, parseInt(cards.error.textContent), data.errorDevices, 500);
                
                // Update compliance percentage
                const compliancePercentage = document.querySelector('.text-primary h4');
                if (compliancePercentage) {
                    compliancePercentage.textContent = data.compliancePercentage.toFixed(1) + '%';
                    compliancePercentage.classList.add('realtime-updated');
                    setTimeout(() => compliancePercentage.classList.remove('realtime-updated'), 800);
                }
            }

            // Function to animate number changes
            function animateValue(element, start, end, duration) {
                const range = end - start;
                const increment = range / (duration / 16); // 60fps
                let current = start;

                element.classList.add('realtime-updated');
                
                const timer = setInterval(() => {
                    current += increment;
                    if ((increment > 0 && current >= end) || (increment < 0 && current <= end)) {
                        element.textContent = Math.round(end);
                        clearInterval(timer);
                        setTimeout(() => element.classList.remove('realtime-updated'), 800);
                    } else {
                        element.textContent = Math.round(current);
                    }
                }, 16);
            }

            // Function to update charts (simplified - full update would require Chart.js update methods)
            function updateCharts(data) {
                // For now, just add a visual indicator that charts need refresh
                const chartCards = document.querySelectorAll('.chart-card');
                chartCards.forEach(card => {
                    card.classList.add('realtime-updated');
                    setTimeout(() => card.classList.remove('realtime-updated'), 800);
                });
                
                // In a full implementation, you would update Chart.js data:
                // complianceChart.data.datasets[0].data = [data.compliantDevices, data.totalDevices - data.compliantDevices];
                // complianceChart.update();
            }
        } else {
            console.warn('[Dashboard] SignalR client not available');
        }
    </script>
}
